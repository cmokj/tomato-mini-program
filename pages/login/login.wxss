/* pages/login/login.wxss */
.login-wrapper {
  height: 100vh;
  background-color: #EEF7F6;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.login-wrapper > .userPic {
  width: 269rpx;
  height: 269rpx;
  border: 16rpx solid #F87B60;
  border-radius: 50%;
  overflow: hidden;
}

.login-wrapper > .userNickName {
  font-size: 28rpx;
  color: #F6705A;
  margin-top: 18rpx;
  margin-bottom: 70rpx;
  position: relative;
}

.login-wrapper > .userNickName::after {
  content: "";
  display: block;
  width: 150%;
  height: 3rpx;
  background-color: #F6705A;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%,16rpx);
}

.login-wrapper > navigator {
  font-size: 20rpx;
  color: #F6705A;
  margin-top: 50rpx;
}

button::after{ border: none; }

.button-hover { opacity: 0.6; }

button {
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background: linear-gradient(to right,#EF9B75, #F6705A);
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
}