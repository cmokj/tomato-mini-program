/* pages/me/me.wxss */
.me-wrapper {
  height: 100vh;
  background-color: #f6f6f6;
  color: #333;
}

.me-wrapper > .information {
  display: flex;
  align-items: center;
  padding: 32rpx;
  position: relative;
  background-color: #fff;
}

.me-wrapper > .information > .userPic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
}

.me-wrapper > .information > .userNickName-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.me-wrapper > .information > .userNickName-wrapper > .userNickName {
  font-size: 36rpx;
  margin-bottom: 22rpx;
  position: relative;
}

.me-wrapper > .information > .userNickName-wrapper > .userNickName::after {
  content: "";
  display: block;
  width: 100%;
  height: 16rpx;
  background-color: #fedccf;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%,-50%);
}

.me-wrapper > .information > .userNickName-wrapper > text {
  font-size: 20rpx;
  color: #F6705A;
}

.me-wrapper > .information > text {
  position: absolute;
  right: 32rpx;
  font-size: 20rpx;
  color: #F6705A;
}

.me-wrapper > .nav {
  margin: 25rpx 0;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.me-wrapper > .nav > view {
  position: relative;
  padding: 10rpx;
}

.me-wrapper > .nav > view > button::after {
  border: none;
}

.me-wrapper > .nav > view > button {
  background-color: #fff;
  font-size: 28rpx;
}

.me-wrapper > .nav > view.true::after {
  content: "";
  display: block;
  width: 50%;
  height: 8rpx;
  background: linear-gradient(0deg, rgba(254,153,111,1) 0%, rgba(246,112,90,1) 100%);
  position: absolute;
  left: 0;
  bottom: 0;
  transform: translateX(50%);
  border-radius: 10rpx;
} 

.me-wrapper > .todoLists {
  overflow: scroll;
}

.me-wrapper > .todoLists > .completedTodos {
  background-color: #fff;
  margin: 16rpx 40rpx;
  box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.10);
  border-radius: 8rpx;
  padding: 20rpx 45rpx;
} 

.me-wrapper > .todoLists > .completedTodos > .todoDate {
  font-size: 36rpx;
  margin-bottom: 24rpx;
}

.me-wrapper > .todoLists > .completedTodos > .todoItem {
  display: flex;
  font-size: 28rpx;
}

.me-wrapper > .todoLists > .completedTodos > .todoItem > .todoMoment {
  margin-right: 25rpx;
} 